@{
  Layout = "_Layout";
}

@using Inventory.Models;

<h1>View Product</h1>
@if (@Model.Count == 0)
{
  <h3>No inventory has been added yet!</h3>
}

<ul>
@foreach (Product product in Model)
{
  <li>@Html.ActionLink($"{product.Name}", "Details", new { id = product.ProductId })</li>
  <li>@product.Collection</li>
  <li>@product.Description</li>
  <li>@product.ProductId</li>
}
</ul>

<p>@Html.ActionLink("Back to homepage", "Index", "Home")</p>